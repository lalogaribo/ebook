<%= simple_form_for(@book, html:{class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, required: true, label: false, placeholder: 'Book Name' %>
    <%= f.input :author, required: true, label: false, placeholder: 'Author Name' %>
    <%= f.input :description, required: true, label: false, placeholder: 'Book Description' %>
    <%= f.input :price, required: true, label: false, placeholder: 'Book Price' %>
    <%= f.input :availability %>

    <%= f.button :submit, class: 'btn btn-primary btn-block' %>

<% end %>
